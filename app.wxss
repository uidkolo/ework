@import "/template/search/search.wxss"
view,image,input,text,textarea,scroll-view{
  box-sizing: border-box;
}
image{
  display: block;
}
page{
  height: 100%;
}
.page{
  height: 100%;
  position: relative;
}
.container{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  padding-top: 150rpx ;
}

.null{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  align-items: center;
}
.null-image{
  width: 222rpx;
  height: 222rpx;
}
.null-btn{
  border: 1px solid #16a9ff;
  color: #16a9ff;
  border-radius: 8rpx;
  padding: 5rpx 15rpx;
  margin-top: 20rpx;
}

.end{
  color: #999;
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  position: relative;
  z-index: 9;
}

.placeholder{
  color: #CCCCCC;
}

.mask{
  position: fixed;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}