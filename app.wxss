view,image,input,text,textarea,scroll-view{
  box-sizing: border-box;
}
image{
  display: block;
}
.top-nav{
  height: 32px;
  border-radius: 32px;
  background: rgba(255,255,255,0.7);
  position: fixed;
  top: 26px;
  left: 20rpx;
  width: 450rpx;
  z-index: 999;
}
.search{
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  font-size: 24rpx;
}
.search-placeholder{
  color: #999;
  flex-grow: 1;
  margin-left: 20rpx;
}
.container{
  position: relative;
  z-index: 2;
  padding: 150rpx 20rpx 40rpx;
}

.null{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  align-items: center;
}
.null-image{
  width: 222rpx;
  height: 222rpx;
}

.end{
  color: #999;
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  position: relative;
  z-index: 9;
}

.placeholder{
  color: #CCCCCC;
}

.mask{
  position: fixed;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}