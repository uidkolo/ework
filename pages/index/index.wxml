<view class='top-nav'>
  <navigator class='search' hover-class='none'>
    <icon type='search' color='#16a9ff' size='18'></icon>
    <text class='search-placeholder'>输入名称、搜索兼职</text>
  </navigator>
</view>
<image class='bg' src='/images/bg.jpg'></image>
<view class='container'>
  <navigator class='item' wx:for='{{list}}' wx:key='{{index}}' url='/pages/index/workList/workList?id={{item.id}}'>
    <image class='item-img' src='{{item.cover}}'></image>
    <view class='name'>{{item.name}}</view>
    <view class='description'>{{item.description}}</view>
  </navigator>
</view>