/**index.wxss**/
.top-nav{
  background: none;
  display: flex;
  align-items: center;
}
.search{
  border-radius: 32px;
  background: rgba(255,255,255,0.7); 
  flex-grow: 1;
  flex-shrink: 0;
}
.school{
  border-radius: 32px;
  background: rgba(255,255,255,0.7); 
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-right: 10rpx;
}
.school-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.school-picker{
  height: 32px;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  padding: 0 20rpx;
}
.school-name{
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bg{
  width: 100%;
  height: 1100rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.item{
  border-radius: 8rpx;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 1px 20rpx 0 rgba(0,0,0,0.15);
  margin-top: 20rpx;
}
.item:first-child{
  margin-top: 0;
}
.item-img{
  width: 100%;
  height: 300rpx;
}
.name{
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  font-weight: bold;
}
.description{
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}