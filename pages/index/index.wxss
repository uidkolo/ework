/**index.wxss**/
.bg{
  width: 100%;
  height: 1100rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.item{
  border-radius: 8rpx;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 1px 20rpx 0 rgba(0,0,0,0.15);
  margin-top: 20rpx;
}
.item:first-child{
  margin-top: 0;
}
.item-img{
  width: 100%;
  height: 300rpx;
}
.name{
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  font-weight: bold;
}
.description{
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}