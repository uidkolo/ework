/* pages/insue/issue.wxss */
.bg{
  width: 100%;
  height: 1100rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.form{
  position: relative;
  z-index: 2;
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 1px 20rpx 0 rgba(0,0,0,0.15);
}
.form-item{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1px solid #f6f6f6;
}
.form-item:first-child{
  border-top: none;
}
.form-label{
  color: #333;
  font-size: 28rpx;
  width: 120rpx;
  text-align: right;
  flex-shrink: 0;
  margin-right: 40rpx;
}
.form-content{
  flex-grow: 1;
  display: flex;
  align-items: center;
}
.form-input{
  flex-grow: 1;
  font-size: 28rpx;
  color: #666;
  height: 70rpx;
}
.form-picker{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  height: 70rpx;
}
.form-picker-line{
  margin: 0 30rpx;
  position: relative;
  bottom: 4rpx;
}
.form-picker-icon{
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
.form-textarea{
  display: block;
  font-size: 28rpx;
  width: 490rpx;
  height: 140rpx;
  text-indent: 0;
  border: 1px solid #f6f6f6;
  appearance: none;
}
.form-btn{
  height: 90rpx;
  background: #16a9ff;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}
.form-img-content{
  border: 1px solid #f6f6f6;
  padding: 30rpx;
}
.form-img-btn{
  display: flex;
  align-items: center;
  justify-content: center;
}
.form-img-icon{
  width: 80rpx;
  height: 80rpx;
}
.fotm-img-tip{
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}