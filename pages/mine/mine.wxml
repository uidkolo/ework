<view class='top-nav'>
  <navigator class='search' hover-class='none'>
    <icon type='search' color='#16a9ff' size='18'></icon>
    <text class='search-placeholder'>输入名称、搜索兼职</text>
  </navigator>
</view>
<image class='bg' src='/images/bg_02.jpg'></image>

<view class='info'>
  <view class='info-headImg'>
    <image class='info-img' src='/images/test/01.jpg'></image>
  </view>
  <view class='nickname'>胡杨</view>
</view>

<view class='work'>
  <view class='work-tab'>
    <view class='work-tab-item work-tab-item--active'>我发布的兼职</view>
    <view class='work-tab-item'>我参加的兼职</view>
  </view>
  <view class='work-list'>
    <view class='null'>
      <image class='null-image' src='/images/null.jpg'></image>
      <text class='null-text'>你还没有发布任何兼职</text>
      <text>赶快去发布吧！</text>
    </view>
  </view>
</view>

<view class='mask' wx:if='{{loginMask}}'>
  <view class='login'>
    <view class='login-title'>登录</view>
    <view class='login-content'>
      <view class='login-content-item'>
        <text class='login-content-dot'></text>
        <text class='login-content-text'>获取您的微信昵称、头像</text>
      </view>
    </view>
    <button class='login-btn' open-type='getUserInfo' bindgetuserinfo='bindGetUserInfo'>
      <image class='login-btn-icon' src='/images/common/wechat.png'></image>
      <text>授权登录</text>
    </button>
  </view>
</view>