.bg{
  width: 100%;
  height: 150rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.top-nav{
  background: none;
  display: flex;
  align-items: center;
}
.search{
  border-radius: 32px;
  background: rgba(255,255,255,0.7); 
  flex-grow: 1;
  flex-shrink: 0;
}
.school{
  border-radius: 32px;
  background: rgba(255,255,255,0.7); 
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-right: 10rpx;
}
.school-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.school-picker{
  height: 32px;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  padding: 0 20rpx;
}
.school-name{
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.item-btn{
  border: 1px solid #999;
  border-radius: 8rpx;
  padding: 4rpx 10rpx;
  color: #999;
  font-size: 24rpx;
}