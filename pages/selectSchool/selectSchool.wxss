page{
  height: 100%;
  position: relative;
  background: linear-gradient(#49a09d,#5f2c82);
}
picker-view{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.title{
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  z-index: 2;
  top: 200rpx;
}
.item{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.btn{
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 80rpx;
  text-align: center;
  background: #49a09d;
  line-height: 80rpx;
  width: 300rpx;
}